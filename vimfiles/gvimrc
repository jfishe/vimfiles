set termencoding=utf-8

" :help gui-font
" :help setting-guifont
if has("gui_gtk3") || has("gui_gtk2")
  set guifont+=Cascadia\ Code\ PL\ 12
  set guifont+=SauceCodePro\ NF\ 12
  set guifont+=DejaVu\ Sans\ Mono\ 12
  set guifont+=Consolas\ 12
elseif has("gui_win32")
  set guifont+=Cascadia_Code_PL:h12:cDEFAULT:qDEFAULT
  set guifont+=Source_Code_Variable:h12:cDEFAULT:qDEFAULT
  set guifont+=UnifontMono:h12:cDEFAULT:qDEFAULT
  set guifont+=Consolas:h11:cDEFAULT:qDEFAULT
endif

" set background=dark
let g:solarized_use16=0

" Disable: Left-hand scrollbar is present when there is a vertically split
" window.
set guioptions-=L
" Disable: Right-hand scrollbar is always present.
set guioptions-=r
" Disable: Include Toolbar.
set guioptions-=T
